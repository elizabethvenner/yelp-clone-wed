<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <p> <%= restaurant.description %></p>
    <p> <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %> </p>
    <p> <%= restaurant.reviews.map{|x| x[:thoughts]}.join(',') %></p>
    <p> <%= restaurant.reviews.map{|x| x[:rating]}.join(',') %></p>
    <p> <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></p>
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <% end %>
  <% else %>
    <h1>No Restaurants yet</h1>
  <% end %>

<p> <%= link_to "Add a restaurant", new_restaurant_path %> </p>
